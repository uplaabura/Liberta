<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |a| %>
    <tr>
      <td><%= a.title %></td>
      <td><%= a.text %></td>
      <td><%= link_to 'Show', article_path(a) %></td>
      <td><%= link_to 'Edit', edit_article_path(a) %></td>
      <td><%= link_to 'Destroy', article_path(a),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

  <%= link_to 'Home', root_path %>
</table>