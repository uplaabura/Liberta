<!-- Header
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<% content_for :header do %>

  <ul class="navbar-list">
    <li class="navbar-item"><a class="navbar-link" href="#intro">Intro</a></li>
    <li class="navbar-item"><a class="navbar-link" href="#preview">Preview</a></li>
    <li class="navbar-item"><a class="navbar-link" href="#story">Story</a></li>
    <li class="navbar-item pull-right">
      <%= link_to "Sign in with Facebook", crew_omniauth_authorize_path(:facebook), class: 'pure-button' %>
    </li>
    <li class="navbar-item">
      <%# crew_session.inspect %>
      <%# crew_signed_in?.inspect %>
    </li>
  </ul> <!-- navbar-list -->

<% end %>

<!-- Full content
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<% content_for :twelve do %>

  <div class="container">
    <section class="header">
      <h4 class="title">Record your travel path</h4>
      <h4 class="title">Reference friends' travel reviews</h4>    
      <%= link_to "Sign in with Facebook", crew_omniauth_authorize_path(:facebook), class: 'button button-primary' %>
    </section>  

  </div> <!-- container -->



  <div id="map"><!-- Google maps lays here --></div>

<% end %>


<!-- Misc
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<% content_for :misc do %>

  <!-- Googlemaps init -->
  <script>

    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: 25.079612, lng: 121.234227},
        zoom: 8
      });
    }

  </script>

  <!-- Google maps async -->
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_lgD9O7ET_xj1x46QV12qmMbO7LzG7jQ&callback=initMap">
  </script>

  <!-- Skeleton  -->
  <script type="text/javascript" async="" src="./Skeleton_files/ga.js"></script><script id="twitter-wjs" src="./Skeleton_files/widgets.js"></script><script src="./Skeleton_files/jquery.min.js"></script>
  <link rel="stylesheet" type="text/css" href="./Skeleton_files/prettify.css">
  <link rel="stylesheet" href="./Skeleton_files/github-prettify-theme.css">
  <script src="./Skeleton_files/site.js"></script>

<% end %>



