<!-- Head
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<% content_for :head do %>

  <style type="text/css">
    body { overflow: hidden; }
  </style>

<% end %>

<!-- Header
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<% content_for :header do %>  

  <div class="navbar-spacer"></div> <!-- navbar-spacer -->
  <nav id="home-nav", class="navbar">
    <div class="container">

      <div class="pure-menu pure-menu-horizontal">

        <ul class="pure-menu-list pull-left">                  
          <li class="pure-menu-item"><%= image_tag(current_crew[:image], class: 'img-circle') %></li>          
          <li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">            
            
            <a href="#" id="crew-name" class="pure-menu-link"><%= current_crew[:name] %></a>
            <ul class="pure-menu-children">            
              <li class="pure-menu-item">
                <%= crew_session.inspect %>  <%= crew_signed_in?.inspect %>
              </li>
              <li class="pure-menu-item">
                <%= link_to 'My Articles', articles_path, class: 'pure-menu-link' %>
              </li>                    
            </ul> <!-- pure-menu-children -->

          </li> <!-- pure-menu-item pure-menu-has-children pure-menu-allow-hover -->
        </ul> <!-- pure-menu-list pull-left -->
        
        <li class="pure-menu-item pull-right">
          <%= link_to "Sign out", destroy_crew_session_path, method: :delete, class: 'pure-menu-link' %>
        </li>
        
      </div> <!-- pure-menu pure-menu-horizontal -->


    </div> <!-- container -->  
  </nav> <!-- navbar -->

<% end %>


<!-- Twelve Columns
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<% content_for :twelve do %>

  <div id="map"><!-- Google maps lays here --></div>

<% end %>


<!-- Contents
–––––––––––––––––––––––––––––––––––––––––––––––––– -->

<!-- Misc
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<% content_for :misc do %>

  <!-- Googlemaps init -->
  <script>

    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: 25.079612, lng: 121.234227},
        zoom: 12
      });
    }

  </script>

  <!-- Google maps async -->
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_lgD9O7ET_xj1x46QV12qmMbO7LzG7jQ&callback=initMap">
  </script>

<% end %>


